    "dotenv": "^17.2.3",
  "firebase-admin": "^13.5.0",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.6",
    "typescript": "^5.5.4",
    "zod": "^4.1.12",
    "firebase-tools": "^12.1.0"
  },
  "pnpm": {
    "overrides": {
      "firebase": "^11.5.0"
    }
  }
